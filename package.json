{
  "name": "gtd-xxvi-website",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "next start",
    "prepare": "husky install",
    "postinstall": "prisma generate",
    "test": "vitest",
    "\n========== Development ==========": "",
    "dev": "next dev",
    "dev:prisma": "dotenv -c development -- prisma",
    "dev:prisma:generate": "dotenv -c development -- prisma generate",
    "dev:prisma:studio": "dotenv -c development -- prisma studio",
    "\n========== Development Database ==========": "",
    "dev:db:start": "docker compose -p gtd-xxvi-website-dev -f docker/development/docker-compose.yaml up -d db",
    "dev:db:stop": "docker compose -p gtd-xxvi-website-dev -f docker/development/docker-compose.yaml down db",
    "dev:db:push": "dotenv -c development -- prisma db push",
    "dev:db:pull": "dotenv -c development -- prisma db pull",
    "dev:db:migrate": "dotenv -c development -- prisma migrate dev",
    "dev:db:clear": "dotenv -c development -- prisma migrate reset",
    "dev:db:init": "pnpm dev:db:push && pnpm dev:prisma db execute --file prisma/init.sql",
    "dev:db:reset": "pnpm dev:db:clear && pnpm dev:db:init",
    "\n========== Development Build ==========": "",
    "dev:build": "docker compose -p gtd-xxvi-website-dev -f docker/development/docker-compose.yaml build",
    "dev:build:run": "docker compose -p gtd-xxvi-website-dev -f docker/development/docker-compose.yaml up -d",
    "dev:build:stop": "docker compose -p gtd-xxvi-website-dev -f docker/development/docker-compose.yaml down",
    "\n========== Production Build ==========": "",
    "prod:build": "docker compose -p gtd-xxvi-website -f docker/production/docker-compose.yaml build",
    "prod:build:run": "docker compose -p gtd-xxvi-website -f docker/production/docker-compose.yaml up -d",
    "prod:build:stop": "docker compose -p gtd-xxvi-website -f docker/production/docker-compose.yaml down",
    "\n========== Building ==========": "",
    "build": "next build",
    "build:docker": "docker build -t gtd-xxvi/website -f docker/production/Dockerfile .",
    "run:docker": "docker run --name gtd-xxvi-website -p 3000:3000 --rm gtd-xxvi/website",
    "\n========== Linting ==========": "",
    "lint": "next lint",
    "lint:prettier:check": "prettier . --check",
    "lint:prettier:write": "prettier . --write",
    "\n========== Deployment ==========": "",
    "deploy:fly": "flyctl deploy"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "@next/bundle-analyzer": "^14.0.4",
    "@prisma/client": "^5.7.1",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-toast": "^1.1.5",
    "@stripe/react-stripe-js": "^2.4.0",
    "@stripe/stripe-js": "^2.3.0",
    "@t3-oss/env-nextjs": "^0.7.1",
    "@tanstack/react-query": "^4.36.1",
    "@trpc/client": "^10.45.0",
    "@trpc/next": "^10.45.0",
    "@trpc/react-query": "^10.45.0",
    "@trpc/server": "^10.45.0",
    "class-variance-authority": "^0.7.0",
    "client-only": "^0.0.1",
    "clsx": "^2.1.0",
    "dayjs": "^1.11.10",
    "jotai": "^2.6.1",
    "lucide-react": "^0.294.0",
    "next": "14.0.4",
    "react": "~18.2.0",
    "react-dom": "~18.2.0",
    "react-hook-form": "^7.49.3",
    "server-only": "^0.0.1",
    "sharp": "^0.33.1",
    "stripe": "^14.11.0",
    "superjson": "^2.2.1",
    "tailwind-merge": "^2.2.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@swc-jotai/react-refresh": "^0.1.0",
    "@testing-library/react": "^14.1.2",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "^20.10.7",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.0.4",
    "eslint-plugin-unicorn": "^50.0.1",
    "husky": "^8.0.3",
    "jsdom": "^23.2.0",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.33",
    "prettier": "^3.1.1",
    "prettier-plugin-prisma": "^5.0.0",
