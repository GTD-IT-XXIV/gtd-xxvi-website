// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id          Int        @id @default(autoincrement())
  name        String     @unique
  description String
  startDate   DateTime   @db.Date
  endDate     DateTime   @db.Date
  bundles     Bundle[]
  timeslots   Timeslot[]
}

model Bundle {
  id              Int      @id @default(autoincrement())
  name            String
  details         String[]
  price           Decimal
  /// Number of slots this bundle occupies; number of people in this bundle
  quantity        Int
  /// Number of bundles available
  remainingAmount Int
  eventId         Int
  event           Event    @relation(fields: [eventId], references: [id])
  tickets         Ticket[]

  @@unique([name, eventId])
}

model Timeslot {
  id             Int      @id @default(autoincrement())
  startTime      DateTime
  endTime        DateTime
  remainingSlots Int
  eventId        Int
  event          Event    @relation(fields: [eventId], references: [id])
  tickets        Ticket[]
}

model Ticket {
  id              Int      @id @default(autoincrement())
  bookingId       Int
  booking         Booking  @relation(fields: [bookingId], references: [id])
  bundleId        Int
  bundle          Bundle   @relation(fields: [bundleId], references: [id])
  timeslotId      Int
  timeslot        Timeslot @relation(fields: [timeslotId], references: [id])
  /// Reference for Stripe PaymentIntent ID; not a foreign key
  paymentIntentId String
}

model Booking {
  id             Int      @id @default(autoincrement())
  name           String
  email          String
  telegramHandle String
  phoneNumber    String
  /// Validity of the booking; Stripe webhook will check this; can be manually set to invalidate the booking
  valid          Boolean  @default(true)
  created        DateTime @default(now())
  tickets        Ticket[]
}
